<div class="header-container">
    <img src="/images/king-william-logo.png" class="logo" />
    <h1>King William's - Add Transaction</h1>
</div>
<div class="container">
    <form action="/transaction/add-transaction" method="post">
        <label for="reservationID"><strong>Reservation Number</strong></label>
        <div id="reservationID" class="top-gap">
            <input name="guest_stay_id" type="number" class="entry-input" />
        </div>

        <br />

        <label for="itemInformation"><strong>Item Information</strong></label>
        <div class="flex-input top-gap">
            <div style="width: 100%;">
                <label for="itemName">Item Name</label>
                <select id="itemName" name="item_desc" class="top-gap">
                    <option value="1">Wake up Calls</option>
                    <option value="2">Dry Cleaning</option>
                    <option value="3">Hotel Service</option>
                </select>
            </div>
            <div style="width: 100%;">
                <label for="itemQuantity">Item Quantity</label>
                <input name="guest_trans_item_quantity" type="number" class="top-gap" />
            </div>
            <div>
                <label for="itemPrice">Item Price</label>
                <input name="item_price" type="number" class="top-gap"/>
            </div>
        </div>

        <br />
        <button type="submit">Submit</button>
        <button id="clear-all">Clear All</button>
    </form>
</div>
<div style="text-align: center; margin-top: 20px;">
    <button
            onclick="window.location.href='/transaction/all-transactions'"
            class="footer-button"
    >Return to Transactions Page</button>
</div>
<script src="/js/utility.js"></script>