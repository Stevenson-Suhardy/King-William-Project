<div class="header-container">
  <img
    src="/images/king-william-logo.png"
    alt="King William's Logo"
    class="logo"
  />
  <h1>King William's - Reservations</h1>
</div>
<div class="container">
  <div class="search-section">
    <div class="filter">
      <label for="reservationID">Reservation Number</label>
      <input
        type="text"
        id="reservationID"
        class="entry-input"
        placeholder="e.g. 1"
      />

      <label for="firstName">First Name</label>
      <input
        type="text"
        id="firstName"
        class="entry-input"
        placeholder="e.g. John"
      />

      <label for="lastName">Last Name</label>
      <input type="text" id="lastName" placeholder="e.g. Doe" />

      <label for="roomID">Room Number</label>
      <input type="text" id="roomID" placeholder="e.g. 101" />

      <label for="checkIn">Check In Date</label>
      <input type="date" id="checkIn" />

      <label for="checkOut">Check Out Date</label>
      <input type="date" id="checkOut" />

      <label for="isCancelled">Is Cancelled?</label>
      <select class="entry-input" id="isCancelled">
        <option selected>Any</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>
    </div>
    <div class="buttons-group">
      <button>Search</button>
    </div>
  </div>

  <div class="results-section">
    <table>
      <thead>
        <tr>
          <th>Reservation Number</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Room Number</th>
          <th>Check-in Date</th>
          <th>Check-out Date</th>
          <th>Balance</th>
          <th>Is Cancelled?</th>
          <th>Cancelled Time</th>
        </tr>
      </thead>
      <tbody>
        <!-- Place holder for abstracted records -->
      </tbody>
    </table>
  </div>
</div>
<div style="text-align: center; margin-top: 20px;">
  <button onclick="window.location.href='/manage'">Return to Main Page</button>
</div>

<script src="/js/utility.js"></script>