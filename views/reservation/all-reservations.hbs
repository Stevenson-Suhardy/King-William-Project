<div class="header-container">
  <img
    src="/images/king-william-logo.png"
    alt="King William's Logo"
    class="logo"
  />
  <h1>King William's - Reservations</h1>
</div>
<div class="navbar">
  <button onclick="window.location.href='/manage'" class="footer-button">Return
    to Main Page</button>
  <button
    onclick="window.location.href='add-reservation'"
    class="footer-button"
  >Add Reservation</button>
</div>
<div class="container">
  <div class="search-section">
    <div class="filter">
      <label for="reservationID">Reservation Number</label>
      <input type="text" id="reservationID" />

      <label for="firstName">First Name</label>
      <input type="text" id="firstName" />

      <label for="lastName">Last Name</label>
      <input type="text" id="lastName" />

      <label for="roomID">Room Number</label>
      <input type="text" id="roomID" />

      <label for="checkIn">Check In Date</label>
      <input type="date" id="checkIn" />

      <label for="checkOut">Check Out Date</label>
      <input type="date" id="checkOut" />

      <label for="isCancelled">Is Cancelled?</label>
      <select id="isCancelled">
        <option selected>Any</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>
    </div>
    <div class="buttons-group">
      <button>Search</button>
    </div>
  </div>

  <div class="results-section">
    <table>
      <thead>
        <tr>
          <th>Reservation Number</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Room Number</th>
          <th>Check-in Date</th>
          <th>Check-out Date</th>
          <th>Balance</th>
          <th>Is Cancelled?</th>
          <th>Cancelled Time</th>
        </tr>
      </thead>
      <tbody>
        <!-- Place holder for abstracted records -->
      </tbody>
    </table>
  </div>
</div>

<script src="/js/utility.js"></script>